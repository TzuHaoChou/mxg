.is-free {
  font-size: 46rpx;
  font-weight: bold;
  color: #FA140E;
  margin-left: 4rpx;
}
.course-header .cover {
  width: 100%;
  height: 420rpx;
}
.course-header .header-info {
  border: 25rpx solid #F8F9FB;
  background: #fff;
  border-left: 0;
  padding: 25rpx;
  border-right: 0;
}
.course-header .header-info .price-info text {
  margin-right: 15rpx;
}
.course-header .header-info .price-info text:first-child {
  font-size: 46rpx;
  font-weight: bold;
  color: #FA140E;
}
.course-header .header-info .price-info .price {
  color: #B6BBBF;
  font-size: 30rpx;
  text-decoration: line-through;
}
.course-header .header-info .price-info .preferential {
  color: #FA140E;
  font-size: 20rpx;
  border: 1px solid #FA140E;
  border-radius: 10rpx;
  padding: 0 3rpx;
}
.course-header .header-info .title {
  font-size: 35rpx;
  font-weight: bold;
  color: #1d1d1f;
  -webkit-line-clamp: 1;
  padding-left: 8rpx;
}
.course-header .header-info .count {
  padding: 15rpx 0;
}
.course-header .header-info .count text {
  font-size: 20rpx;
  color: #7d828f;
  border-radius: 30rpx;
  background-color: #F8F9FB;
  margin-right: 15rpx;
  padding: 15rpx;
}

