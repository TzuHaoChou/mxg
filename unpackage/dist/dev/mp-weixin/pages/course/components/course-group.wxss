/* 下划线 */
.course-group {
  padding: 0 36rpx;
}
.course-group .group {
  box-shadow: 2px 0 10px 0 rgba(0, 0, 0, 0.1);
  padding: 0 20rpx;
  margin: 36rpx 0;
  background-color: #fff;
  border-radius: 20rpx;
}
.course-group .group .group-title {
  font-size: 35rpx;
  font-weight: 500;
  padding-top: 20rpx;
}
.course-group .group .group-footer {
  color: #FA140E;
  font-size: 30rpx;
  line-height: 80rpx;
  font-weight: bold;
}
.course-group .group .group-footer .price text:first-child {
  font-size: 37rpx;
  margin-right: 10rpx;
}
.course-group .group .group-footer .price text:last-child {
  color: #999;
  font-weight: normal;
  text-decoration: line-through;
}

